{
	"name": "sveltekit-supabase-starter",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"generate-types": "supabase gen types typescript --local > src/lib/generated/supabase/types.ts",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/eslint": "8.56.6",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"autoprefixer": "^10.4.19",
		"crossword-layout-generator": "^0.1.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.11",
		"lucide-svelte": "^0.364.0",
		"mode-watcher": "^0.3.0",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.8",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.4.3",
		"vite": "^5.2.7",
		"vitest": "^1.4.0"
	},
	"type": "module",
	"dependencies": {
		"@supabase/auth-ui-svelte": "^0.2.9",
		"@supabase/ssr": "^0.1.0",
		"@supabase/supabase-js": "^2.40.0",
		"@sveltejs/adapter-cloudflare": "^4.2.0",
		"bits-ui": "^0.20.1",
		"clsx": "^2.1.0",
		"cmdk-sv": "^0.0.16",
		"formsnap": "^0.5.1",
		"sveltekit-superforms": "^2.11.0",
		"tailwind-merge": "^2.2.2",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.22.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"build",
					"chore",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	}
}
